<main>
  <h1>Your Dashboard</h1>
  <a href="/dashboard/new-post">Create New Post</a>
  {{#if posts.length}}
    <section class="post-list">
      {{#each posts}}
        <article>
          <h2>{{this.title}}</h2>
          <p>{{this.content}}</p>
          <footer>
            <p>Posted on {{#if this.createdAt}}{{format_date this.createdAt}}{{else}}N/A{{/if}}</p>
            <a href="/dashboard/edit-post/{{this.id}}">Edit</a>
            <button data-id="{{this.id}}" class="delete-post">Delete</button>
          </footer>
        </article>
      {{/each}}
    </section>
  {{else}}
    <p>You haven't created any posts yet.</p>
  {{/if}}
</main>

<script src="/js/dashboard.js"></script>