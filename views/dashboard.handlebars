<main>
  <h1>Your Dashboard</h1>
  <a href="/dashboard/new-post" class="btn btn-primary">Create New Post</a>
  {{#if posts.length}}
    <section class="post-list">
      {{#each posts}}
        <article class="post">
          <h2>{{title}}</h2>
          <p>{{content}}</p>
          <footer>
            <p>Posted on {{format_date createdAt}}</p>
            <div class="post-actions">
              <a href="/dashboard/edit-post/{{id}}" class="btn btn-secondary edit-post">Edit</a>
              <button data-id="{{id}}" class="btn btn-danger delete-post">Delete</button>
            </div>
          </footer>
        </article>
      {{/each}}
    </section>
  {{else}}
    <p>You haven't created any posts yet.</p>
  {{/if}}
</main>

<script src="/js/dashboard.js"></script>