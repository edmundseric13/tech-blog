<main>
  <h1>Your Dashboard</h1>
  <a href="/new-post">Create New Post</a>
  {{#if posts.length}}
    {{#each posts}}
      <article>
        <h2>{{this.title}}</h2>
        <p>{{this.content}}</p>
        <footer>
          <p>Posted on {{format_date this.createdAt}}</p>
          <a href="/edit-post/{{this.id}}">Edit</a>
          <button data-id="{{this.id}}" class="delete-post">Delete</button>
        </footer>
      </article>
    {{/each}}
  {{else}}
    <p>You haven't created any posts yet.</p>
  {{/if}}
</main>